    padding: 10px;
    border-radius: 8px;
    margin-top: 20px;
    font-weight: bold;
    text-align: center;
    border: 1px solid rgba(220, 38, 38, 0.5);
  }

  label {
    display: block;
    margin-bottom: 15px;
    font-weight: 500;
    color: var(--text-main);
  }

  input,
  textarea,
  select {
    width: 100%;
    padding: 12px;
    margin-top: 5px;
    background: rgba(255, 255, 255, 0.1); /* Input Glass */
