---
// src/pages/index.astro
// IMPORTACIÓN DE COMPONENTES DE PÁGINA
import MainLayout from "../layouts/MainLayout.astro";
import Beneficios from "../components/Beneficios.astro"; // Sección de características clave
import Galeria from "../components/Galeria.astro"; // Carrusel o grilla de fotos
import Preguntas from "../components/Preguntas.astro"; // Sección FAQ
import { getImage } from "astro:assets";
import heroImage from "../assets/fondo-pantalla.png";

// Optimización de la imagen de fondo
const optimizedHero = await getImage({ src: heroImage, format: "webp" });
const heroBgUrl = `url(${optimizedHero.src})`;
---

<!-- ENVUELTA DE LAYOUT PRINCIPAL --><!-- Pasamos el título "Inicio" que se concatenará como "Inicio | Quilla Electric" -->
<MainLayout titulo="Inicio">
  <!-- SECCIÓN HERO: La primera impresión del usuario -->
  <div class="hero" style={`--hero-bg: ${heroBgUrl}`}>
    <h1>⚡ Soluciones Eléctricas en Arequipa</h1>
    <p class="subtitulo">
      Energía Segura y Vigilancia Inteligente para tu Empresa o Hogar.
      Instalaciones eléctricas industriales, sistemas de cámaras y mantenimiento
      experto de pozos a tierra. Garantía, rapidez y certificaciones de ley.
    </p>

    <!-- BOTONES DE LLAMADA A LA ACCIÓN (CTA) -->
    <div class="botones">
      <a href="/contacto" class="btn-primary">Solicitar Cotización</a>
      <a href="/servicios" class="btn-secondary">Ver Servicios</a>
    </div>
  </div>

  <hr class="divisor" />

  <!-- SECCIONES DE CONTENIDO -->
  <Beneficios />

  <Galeria /><Preguntas />
</MainLayout>

<style>
  /* Estilos solo para la portada */
  /* Estilos solo para la portada */
  .hero {
    text-align: center;
    padding: 6rem 1rem; /* Más espacio vertical */
    min-height: 85vh; /* Altura considerable */
    display: flex;
    flex-direction: column;
    justify-content: center; /* Centrado vertical */
    align-items: center; /* Centrado horizontal */

    /* FONDO "TODOTERRENO" */
    background-image:
      linear-gradient(to bottom, rgba(5, 15, 30, 0.75), rgba(5, 15, 30, 0.65)),
      /* Overlay azul oscuro */ var(--hero-bg);
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;

    color: white; /* Asegura texto blanco sobre fondo oscuro */
    position: relative;
  }
  h1 {
    font-size: 2.5rem; /* MOBILE */
    color: #ffffff; /* Blanco puro */
    margin-bottom: 1.5rem;
    line-height: 1.2;
    text-shadow: 0 4px 6px rgba(0, 0, 0, 0.5); /* Sombra para legibilidad */
    max-width: 900px;
  }
  .subtitulo {
    font-size: 1.25rem; /* MOBILE */
    color: #f1f5f9; /* Blanco humo */
    max-width: 700px;
    margin: 0 auto 2.5rem auto;
    padding: 0 10px;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
    font-weight: 500;
  }

  .botones {
    display: flex;
    flex-direction: column; /* MOBILE: Stacked buttons */
    gap: 15px;
    justify-content: center;
    align-items: center;
  }

  /* MEDIA QUERIES DESKTOP */
  @media (min-width: 768px) {
    .hero {
      padding: 4rem 0;
    }
    h1 {
      font-size: 3rem;
    }
    .subtitulo {
      font-size: 1.3rem;
    }
    .botones {
      flex-direction: row;
    }
  }

  /* Nota: .btn-primary viene de MainLayout */

  .btn-secondary {
    background: rgba(255, 255, 255, 0.4);
    backdrop-filter: blur(4px);
    color: var(--text-main);
    padding: 12px 25px;
    text-decoration: none;
    border-radius: 50px;
    border: 1px solid var(--text-main);
    font-weight: bold;
    transition: all 0.3s ease;
  }

  .btn-secondary:hover {
    background: white;
    color: #061161; /* Azul oscuro para contraste con fondo blanco */
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(255, 255, 255, 0.4);
  }

  .divisor {
    border: 0;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
    margin: 2rem 0;
  }
</style>
