---
import MainLayout from '../layouts/MainLayout.astro';
import Beneficios from '../components/Beneficios.astro';
import Galeria from '../components/Galeria.astro';
import Preguntas from '../components/Preguntas.astro';
---

<MainLayout titulo="Inicio">
    
    <div class="hero">
        <h1>⚡ Soluciones Eléctricas en Arequipa</h1>
        <p class="subtitulo">
            Especialistas en Pozos a Tierra, Certificaciones INDECI y Emergencias 24/7.
            Protege tu negocio y familia hoy mismo.
        </p>
        <div class="botones">
            <a href="/contacto" class="btn-primary">Solicitar Cotización</a>
            <a href="/servicios" class="btn-secondary">Ver Servicios</a>
        </div>
    </div>

    <hr class="divisor">

    <Beneficios />
    
    <Galeria /><Preguntas />

</MainLayout>

<style>
    /* Estilos solo para la portada */
    .hero {
        text-align: center;
        padding: 3rem 0;
    }
    h1 { font-size: 2.5rem; color: #0f172a; margin-bottom: 1rem; }
    .subtitulo { font-size: 1.2rem; color: #64748b; max-width: 600px; margin: 0 auto 2rem auto; }
    
    .botones { display: flex; gap: 15px; justify-content: center; }
    
    .btn-primary {
        background: #0f172a; color: white; padding: 12px 25px; 
        text-decoration: none; border-radius: 5px; font-weight: bold;
    }
    .btn-secondary {
        background: white; color: #0f172a; padding: 12px 25px; 
        text-decoration: none; border-radius: 5px; border: 2px solid #0f172a; font-weight: bold;
    }

    .divisor { border: 0; border-top: 1px solid #e2e8f0; margin: 2rem 0; }
</style>