---
// 1. IMPORTAMOS EL COMPONENTE INTELIGENTE
import { Image } from "astro:assets";

// 2. IMPORTAMOS LAS FOTOS (Astro necesita "conocerlas" antes)
// Nota: Asegúrate de tener estas fotos en src/assets/ o dará error.
// Si aún no tienes fotos, descarga unas de prueba y ponles estos nombres.
import fotoTablero from "../assets/tablero-industrial.jpeg";
import fotoPozo from "../assets/pozo-tierra.jpeg";
import fotoLed from "../assets/iluminacion-led.jpeg";
import fotoCasa from "../assets/cableado-casa.jpeg";
---

<section class="galeria-section" id="proyectos">
  <div class="contenido-ancho">
    <h2>Nuestros Proyectos Recientes</h2>
    <p class="subtitulo">Calidad y seguridad certificada.</p>

    <div class="grid-galeria">
      <div class="item-galeria">
        <Image
          src={fotoTablero}
          alt="Mantenimiento de tablero eléctrico industrial en Arequipa"
          width={600}
          quality="mid"
          class="img-optimizada"
        />
        <div class="overlay">
          <h3>Tablero Industrial</h3>
          <p>Mantenimiento y peinado</p>
        </div>
      </div>

      <div class="item-galeria">
        <Image
          src={fotoPozo}
          alt="Instalación de Pozo a Tierra en Cayma"
          width={600}
          quality="mid"
          class="img-optimizada"
        />
        <div class="overlay">
          <h3>Pozo a Tierra</h3>
          <p>Certificación INDECI</p>
        </div>
      </div>

      <div class="item-galeria">
        <Image
          src={fotoLed}
          alt="Iluminación LED oficinas"
          width={600}
          quality="mid"
          class="img-optimizada"
        />
        <div class="overlay">
          <h3>Iluminación LED</h3>
          <p>Ahorro de energía</p>
        </div>
      </div>

      <div class="item-galeria">
        <Image
          src={fotoCasa}
          alt="Cableado residencial seguro"
          width={600}
          quality="mid"
          class="img-optimizada"
        />
        <div class="overlay">
          <h3>Residencial</h3>
          <p>Cableado libre de halógenos</p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* ESTILOS (Adaptados para tema Azul Eléctrico) */
  .galeria-section {
    padding: 4rem 1rem;
    /* Eliminado el background color fijo para ver el gradiente global */
  }
  .contenido-ancho {
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
  }
  h2 {
    font-size: 2rem;
    color: var(--text-main); /* Blanco */
    margin-bottom: 0.5rem;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }
  .subtitulo {
    margin-bottom: 3rem;
    color: var(--text-muted); /* Gris claro */
    font-size: 1.1rem;
  }

  .grid-galeria {
    display: grid;
    /* Mobile-First: asegura que entren tarjetas en pantallas de 300px+ */
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 20px; /* Gap más pequeño para móvil */
  }

  @media (min-width: 768px) {
    .grid-galeria {
      gap: 30px; /* Gap original en desktop */
    }
  }

  .item-galeria {
    position: relative;
    overflow: hidden;
    border-radius: 16px; /* Coherente con Beneficios */
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3); /* Sombra más fuerte para profundidad */
    cursor: pointer;
    aspect-ratio: 4/3;
    border: 1px solid rgba(255, 255, 255, 0.1); /* Borde sutil glass */
    background: rgba(0, 0, 0, 0.2); /* Fondo base por si carga lento */
  }

  /* Clases para la imagen de Astro */
  .img-optimizada {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94); /* Transición más suave */
  }

  .item-galeria:hover .img-optimizada {
    transform: scale(1.1);
  }

  /* Hover effect en el contenedor para borde brillante */
  .item-galeria:hover {
    border-color: var(--primary-yellow);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.4);
  }

  .overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    /* Gradiente oscuro para leer texto sobre fotos */
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.9) 0%,
      rgba(0, 0, 0, 0.6) 50%,
      transparent 100%
    );
    color: white;
    padding: 25px 20px;
    text-align: left;
    box-sizing: border-box;
    transform: translateY(10px); /* Sutil animación de entrada */
    transition: transform 0.3s ease;
  }

  .item-galeria:hover .overlay {
    transform: translateY(0);
  }

  .overlay h3 {
    margin: 0;
    font-size: 1.3rem;
    color: var(--primary-yellow);
    font-weight: 700;
  }
  .overlay p {
    margin: 5px 0 0;
    font-size: 0.95rem;
    color: #e2e8f0;
  }
</style>
