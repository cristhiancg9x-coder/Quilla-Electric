---
// 1. IMPORTAMOS EL COMPONENTE INTELIGENTE
import { Image } from 'astro:assets';

// 2. IMPORTAMOS LAS FOTOS (Astro necesita "conocerlas" antes)
// Nota: Asegúrate de tener estas fotos en src/assets/ o dará error.
// Si aún no tienes fotos, descarga unas de prueba y ponles estos nombres.
import fotoTablero from '../assets/tablero-industrial.jpeg';
import fotoPozo from '../assets/pozo-tierra.jpeg';
import fotoLed from '../assets/iluminacion-led.jpeg';
import fotoCasa from '../assets/cableado-casa.jpeg';
---

<section class="galeria-section" id="proyectos">
  <div class="contenido-ancho">
    <h2>Nuestros Proyectos Recientes</h2>
    <p class="subtitulo">Calidad y seguridad certificada.</p>

    <div class="grid-galeria">
      
      <div class="item-galeria">
        <Image 
          src={fotoTablero} 
          alt="Mantenimiento de tablero eléctrico industrial en Arequipa" 
          width={600} 
          quality="mid" 
          class="img-optimizada"
        />
        <div class="overlay">
          <h3>Tablero Industrial</h3>
          <p>Mantenimiento y peinado</p>
        </div>
      </div>

      <div class="item-galeria">
        <Image 
          src={fotoPozo} 
          alt="Instalación de Pozo a Tierra en Cayma" 
          width={600}
          quality="mid"
          class="img-optimizada" 
        />
        <div class="overlay">
          <h3>Pozo a Tierra</h3>
          <p>Certificación INDECI</p>
        </div>
      </div>

      <div class="item-galeria">
        <Image 
          src={fotoLed} 
          alt="Iluminación LED oficinas" 
          width={600} 
          quality="mid"
          class="img-optimizada"
        />
        <div class="overlay">
          <h3>Iluminación LED</h3>
          <p>Ahorro de energía</p>
        </div>
      </div>

      <div class="item-galeria">
        <Image 
          src={fotoCasa} 
          alt="Cableado residencial seguro" 
          width={600}
          quality="mid"
          class="img-optimizada" 
        />
        <div class="overlay">
          <h3>Residencial</h3>
          <p>Cableado libre de halógenos</p>
        </div>
      </div>

    </div>
  </div>
</section>

<style>
  /* ESTILOS (Casi iguales, solo ajustamos la clase de la imagen) */
  .galeria-section { padding: 4rem 1rem; background-color: #f8fafc; }
  .contenido-ancho { max-width: 1200px; margin: 0 auto; text-align: center; }
  h2 { font-size: 2rem; color: #0f172a; margin-bottom: 0.5rem; }
  .subtitulo { margin-bottom: 3rem; color: #64748b; }

  .grid-galeria {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 20px;
  }

  .item-galeria {
    position: relative;
    overflow: hidden;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    cursor: pointer;
    aspect-ratio: 4/3; /* Mantiene todas las tarjetas del mismo tamaño */
  }

  /* Clases para la imagen de Astro */
  .img-optimizada {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Recorta la foto para que llene el cuadro */
    transition: transform 0.5s ease;
  }

  .item-galeria:hover .img-optimizada { transform: scale(1.1); }

  .overlay {
    position: absolute;
    bottom: 0; left: 0; width: 100%;
    background: linear-gradient(to top, rgba(0,0,0,0.8), transparent);
    color: white; padding: 20px; text-align: left;
    box-sizing: border-box;
  }
  .overlay h3 { margin: 0; font-size: 1.2rem; color: #fbbf24; }
  .overlay p { margin: 5px 0 0; font-size: 0.9rem; color: #e2e8f0; }
</style>